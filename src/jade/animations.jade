          h4.gap-top Spin Fast
          button.gap-bottom(data-test='spin-fast', data-timing='6000') spin-fast (continuous)
          button.gap-bottom(data-test='spin-fast-once', data-timing='1000') spin-fast-once
          button.gap-bottom(data-test='spin-fast-twice', data-timing='2000') spin-fast-twice
          button.gap-bottom(data-test='spin-fast-thrice', data-timing='3000') spin-fast-thrice
        .one.third.padded
          h4.gap-top Spin Slow
          button.gap-bottom(data-test='spin-slow', data-timing='30000') spin-slow (continuous)
          button.gap-bottom(data-test='spin-slow-once', data-timing='5000') spin-slow-once
          button.gap-bottom(data-test='spin-slow-twice', data-timing='10000') spin-slow-twice
          button.gap-bottom(data-test='spin-slow-thrice', data-timing='15000') spin-slow-thrice
      
      :coffeescript
        $ ->
          resetTest = ->
            $('#animateTest').removeClass().addClass('large asphalt animated').text('I do awesome things.')

          $('body').on 'click', '[data-test]', (e) ->
            resetTest()
            clearTimeout(window.reset)
            
            $('#animateTest').removeClass().addClass('large asphalt animated '+$(this).attr('data-test')).text('I '+$(this).attr('data-test')+'.')
            
            window.reset = setTimeout( =>
              resetTest()
            , ($(this).attr('data-timing') || 1300) )
